# Vari√°veis de Ambiente - SocialFlow
# Copie para .env.local e configure com suas credenciais

# ==================== API ====================
NODE_ENV=development
PORT=3001
API_URL=http://localhost:3001

# ==================== FRONTEND ====================
REACT_APP_API_URL=http://localhost:3001
REACT_APP_ENV=development

# ==================== DATABASE ====================

# PostgreSQL
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=socialflow
DATABASE_PASSWORD=socialflow123
DATABASE_NAME=socialflow_db
DATABASE_SYNC=true
DATABASE_LOGGING=false

# MongoDB
MONGODB_URI=mongodb://socialflow:socialflow123@localhost:27017/socialflow_analytics?authSource=admin
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_USER=socialflow
MONGODB_PASSWORD=socialflow123
MONGODB_DATABASE=socialflow_analytics

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=socialflow123
REDIS_DB=0

# ==================== JWT ====================
JWT_SECRET=your_jwt_secret_key_change_in_production_12345
JWT_EXPIRATION=24h
JWT_REFRESH_SECRET=your_refresh_token_secret_key_change_in_production
JWT_REFRESH_EXPIRATION=7d

# ==================== OAUTH2 ====================

# Meta (Instagram, Facebook)
META_APP_ID=your_meta_app_id
META_APP_SECRET=your_meta_app_secret
META_REDIRECT_URI=http://localhost:3001/auth/oauth/meta/callback

# TikTok
TIKTOK_CLIENT_ID=your_tiktok_client_id
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret
TIKTOK_REDIRECT_URI=http://localhost:3001/auth/oauth/tiktok/callback

# YouTube
YOUTUBE_CLIENT_ID=your_youtube_client_id
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret
YOUTUBE_REDIRECT_URI=http://localhost:3001/auth/oauth/youtube/callback

# ==================== AI ====================

# Google Gemini
GEMINI_API_KEY=your_gemini_api_key

# ==================== PAYMENT GATEWAY ====================

# Mercado Pago
MERCADOPAGO_ACCESS_TOKEN=APP_USR-xxxxxxxxxxxxxxxx-xxxxxxxxxxxxxxxx
MERCADOPAGO_PUBLIC_KEY=APP_USR_xxxxxxxxxxxxxxxx
MERCADOPAGO_MODE=sandbox

# ==================== EMAIL ====================

# SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@socialflow.com

# SendGrid (alternativo)
SENDGRID_API_KEY=your_sendgrid_api_key

# ==================== STORAGE ====================

# AWS S3 (opcional)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=socialflow-uploads

# ==================== WEBHOOK ====================

APP_URL=http://localhost:3000
WEBHOOK_SECRET=your_webhook_secret_key

# ==================== LOGGING ====================

LOG_LEVEL=debug
LOG_FILE=logs/socialflow.log

# ==================== CORS ====================

CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# ==================== SENTRY ====================

SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
